# Create the dnsmasq.d and hosts_dir directory
mkdir -p dnsmasq.d dnsmasq_hosts.d
# Install systemd service
install -m 644 ../dnsmasq.service "/etc/systemd/system/${MODULE_ID}.service"
systemctl daemon-reload
